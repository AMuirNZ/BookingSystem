@model IEnumerable<BookingSystem.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

@*<h2>Index</h2>*@

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerformanceId)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberFullPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberConcessionPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StoreEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalCost)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PerformanceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberFullPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberConcessionPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
