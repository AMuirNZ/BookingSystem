@using BookingSystem.Operations
@model BookingSystem.Models.Performances

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Performances</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShowId" class="control-label"></label>
                <input asp-for="ShowId" class="form-control" readonly="readonly" value="@DatabaseManager.ShowId"/>
                <span asp-validation-for="ShowId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" value="@DateTime.Now.ToString("dd/MM/yyyy")" data-date-format="dd/mm/yyyy" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
